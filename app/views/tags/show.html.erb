<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<ul>
  <li><%= link_to "<< Back to Tags List", tags_path %></li>
  <li><%= link_to "delete", tag_path(@tag), method: :delete , data: {confirm: "Really delete the tag?"}%></li>
</ul>
